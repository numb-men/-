/* pages/feedback/feedback.wxss */
page{
  background: #f6f4f7;
}
.taps {
  background: #fefefe;
  width: 745rpx;
  border: 5rpx solid #f6f4f7;
}
.tap {
  font-size: 30rpx;
  line-height: 60rpx;
  margin: 15rpx 0;
  border-bottom: 5rpx solid #ffcc00;
}
.content {
  padding-top: 15rpx;
  padding-bottom: 10rpx;
  margin: 25rpx 30rpx;
  margin-bottom: 100rpx;
  background: #fefefe;
  border-radius: 7rpx;
}
.label-line {
  padding: 15rpx;
}
.label-icon {
  width: 40rpx;
  height: 40rpx;
  padding: 15rpx;
  margin-right: 10rpx;
}
.label {
  font-size: 30rpx;
  color: #343131;
  line-height: 70rpx;
}
.mark-star {
  width: 40rpx;
  height: 40rpx;
  padding: 15rpx;
}
.hr {
  width: 100%;
  height: 3.5rpx;
  background: #f6f4f7;
  margin: 5rpx 0;
}
.question {
  padding: 15rpx 30rpx;
}
.question-title {
  font-size: 30rpx;
  line-height: 60rpx;
  width: 600rpx;
  color: #343131;
}
.options {
  padding: 15rpx 20rpx;
  flex-wrap: wrap;
}
.option {
  padding: 0 25rpx;
}
.whether-sle {
  width: 40rpx;
  height: 40rpx;
  padding: 10rpx;
  margin-right: 10rpx;
}
.option-text {
  font-size: 28rpx;
  line-height: 60rpx;
  color: #666666;
}
.mail-input {
  width: 380rpx;
  font-size: 28rpx;
  line-height: 50rpx;
  padding: 0 10rpx;
  margin: 10rpx 0;
  margin-right: 20rpx;
  background: #f7f7f7;
  border-radius: 7rpx;
}
.mail-p {
  font-size: 28rpx;
}
.comment {
  padding: 15rpx 30rpx;
}
.comment-content {
  width: 580rpx;
  height: 300rpx;
  padding:15rpx 25rpx;
  font-size: 28rpx;
  line-height: 50rpx;
  background: #f7f7f7;
  border-radius: 7rpx;
}
.comment-content-p {
  font-size: 28rpx;
}
.verify-btn {
  width: 750rpx;
  background: #fefefe;
  font-size: 32rpx;
  line-height: 80rpx;
  color: #343131;
  text-align: center;
  font-weight: bold;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 100;
  border-top: 0.2rpx solid #f6f4f7;
}

.report-bug {

}
.picker {
  background: #f7f7f7;
  font-size: 25rpx;
  line-height: 60rpx;
  color: #343131;
  border-radius: 7rpx;
  margin: 5rpx 15rpx;
  width: 150rpx;
  text-align: center;
}
.detail-content {
  width: 580rpx;
  height: 500rpx;
  padding:15rpx 25rpx;
  font-size: 28rpx;
  line-height: 50rpx;
  background: #f7f7f7;
  border-radius: 7rpx;
}