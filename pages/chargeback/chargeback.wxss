/* pages/chargeback/chargeback.wxss */
page{
  background: #f6f4f7;
}
.content {
  padding-top: 15rpx;
  padding-bottom: 25rpx;
  margin: 25rpx 30rpx;
  margin-bottom: 100rpx;
  background: #fefefe;
  border-radius: 7rpx;
}
.label-line {
  padding: 15rpx;
}
.label-icon {
  width: 40rpx;
  height: 40rpx;
  padding: 15rpx;
  margin-right: 10rpx;
}
.label {
  font-size: 30rpx;
  color: #343131;
  line-height: 70rpx;
}
.reason {
  padding: 15rpx 30rpx;
}
.reason-content {
  width: 580rpx;
  height: 650rpx;
  padding:15rpx 25rpx;
  font-size: 28rpx;
  line-height: 50rpx;
  background: #f7f7f7;
  border-radius: 7rpx;
}
.reason-content-p {
  font-size: 28rpx;
}
.verify-btn {
  width: 750rpx;
  background: #fefefe;
  font-size: 32rpx;
  line-height: 80rpx;
  color: #343131;
  text-align: center;
  font-weight: bold;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 100;
  border-top: 0.2rpx solid #f6f4f7;
}