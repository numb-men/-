/* pages/upload-pic/upload-pic.wxss */
.contain {
  padding: 27rpx;
  width: 700rpx;
  background: #f6f4f7;
}
.pic-list {
  width: 670rpx;
  padding: 10rpx 15rpx;
  background: #fefefe;
}
.image-box{
  width: 670rpx;
  padding: 10rpx 0;
}
.add-pic-btn {
  padding-top: 50rpx;
  padding-bottom: 100rpx;
}
.add-pic-btn-icon {
  width: 220rpx;
  height: 220rpx;
  background: #fefefe;
  margin: 10rpx 240rpx;
}
.add-pic-btn-text {
  font-size: 23rpx;
  line-height: 50rpx;
  color: #a9a9a9;
  text-align: center;
}
.pic-num {
  font-size: 28rpx;
  color: #343131;
  line-height: 50rpx;
  padding: 10rpx;
  margin: 15rpx 0;
  text-align: center;
  background: #fefefe;
}
.verify-btn {
  width: 750rpx;
  background: #fefefe;
  font-size: 32rpx;
  line-height: 80rpx;
  color: #343131;
  text-align: center;
  font-weight: bold;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 100;
  border-top: 0.2rpx solid #f6f4f7;
}