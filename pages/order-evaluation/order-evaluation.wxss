/* pages/order-evaluation/order-evaluation.wxss */
page{
  background: #f6f4f7;
}
.content {
  padding-top: 15rpx;
  padding-bottom: 25rpx;
  margin: 25rpx 30rpx;
  margin-bottom: 100rpx;
  background: #fefefe;
  border-radius: 7rpx;
}
.top {
  padding: 15rpx 25rpx;
  padding-top: 15rpx;
}
.shop-head-img {
  width: 85rpx;
  height: 85rpx;
  margin: 7.5rpx;
  margin-right: 27.5rpx;
  border-radius: 50%;
}
.shop-name {
  font-size: 30rpx;
  font-weight: bold;
  line-height: 50rpx;
}
.file-type {
  width: 30rpx;
  height: 30rpx;
  padding: 10rpx 0;
  margin-right: 10rpx;
}
.file-name {
  font-size: 25rpx;
  color: #343131;
  line-height: 50rpx;
}
.label-line {
  padding: 15rpx;
}
.label-icon {
  width: 40rpx;
  height: 40rpx;
  padding: 15rpx;
  margin-right: 10rpx;
}
.label {
  font-size: 30rpx;
  color: #343131;
  line-height: 70rpx;
}
.mark-star {
  width: 40rpx;
  height: 40rpx;
  padding: 15rpx;
}
.hr {
  width: 100%;
  height: 3.5rpx;
  background: #f6f4f7;
  margin: 5rpx 0;
}
.evaluation {
  padding: 15rpx 30rpx;
}
.evaluation-content {
  width: 580rpx;
  height: 650rpx;
  padding:15rpx 25rpx;
  font-size: 28rpx;
  line-height: 50rpx;
  background: #f7f7f7;
  border-radius: 7rpx;
}
.evaluation-content-p {
  font-size: 28rpx;
}
.verify-btn {
  width: 750rpx;
  background: #fefefe;
  font-size: 32rpx;
  line-height: 80rpx;
  color: #343131;
  text-align: center;
  font-weight: bold;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 100;
  border-top: 0.2rpx solid #f6f4f7;
}